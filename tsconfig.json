{
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "moduleResolution": "node16",
        "target": "es2022",
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "isolatedModules": true
    },
    "include": ["src/**/*", "src/tests"],
    "exclude": ["node_modules"]
}
