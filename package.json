{
    "name": "opds-ts",
    "version": "2.0.2",
    "description": "A TypeScript library for generating and parsing OPDS feeds with full TypeScript support.",
    "exports": {
        "./v1.2": {
            "types": "./dist/v1.2.d.ts",
            "import": "./dist/v1.2.js",
            "require": "./dist/v1.2.js"
        },
        "./v2": {
            "types": "./dist/v2.d.ts",
            "import": "./dist/v2.js",
            "require": "./dist/v2.js"
        }
    },
    "scripts": {
        "build": "tsc",
        "publish": "rm -rf dist && tsc && npm publish",
        "format": "prettier --write 'src/**/*.{ts,tsx}'",
        "test": "tsc && jest src/tests --config jest.config.js",
        "testapp": "bun testapp/index.ts",
        "docs": "typedoc --options typedoc.json",
        "opendocs": "bun run docs && open ./docs/index.html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KartoffelChipss/opds-ts.git"
    },
    "homepage": "https://opds.js.org/",
    "bugs": {
        "url": "https://github.com/KartoffelChipss/opds-ts/issues"
    },
    "author": {
        "name": "Jan Stra√üburger",
        "email": "contact@strassburger.org",
        "url": "https://strassburger.org/"
    },
    "keywords": [
        "opds",
        "typescript",
        "library",
        "feeds",
        "ebook",
        "catalog"
    ],
    "license": "MIT",
    "readme": "README.md",
    "packageManager": "pnpm@10.15.1",
    "dependencies": {
        "fast-xml-parser": "^5.3.0",
        "xmlbuilder2": "^3.1.1"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^24.6.2",
        "jest": "^30.2.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "typedoc": "^0.28.13",
        "typedoc-github-theme": "^0.3.1"
    },
    "peerDependencies": {
        "typescript": "^5.6.2"
    }
}
